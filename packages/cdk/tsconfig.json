{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2018"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@/types": ["types.ts"],
      "@/configs": ["configs.ts"],
      "/opt/nodejs/dynamodb-utils": [
        "functions/layers/dynamodb/nodejs/dynamodb-utils"
      ],
      "/opt/nodejs/cdk-crypto": ["functions/layers/cdk-crypto/nodejs/index"]
    }
  },
  "exclude": ["node_modules", "cdk.out"]
}
